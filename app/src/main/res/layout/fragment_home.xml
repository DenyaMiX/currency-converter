<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    
    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="50dp"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sub_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exchange rates"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_below="@id/home_text"/>

    <ImageView
        android:id="@+id/image_symbol1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/euro"
        android:layout_below="@+id/sub_home_text" />

    <TextView
        android:id="@+id/currency_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_toEndOf="@id/image_symbol1"
        android:layout_below="@id/sub_home_text"
        android:text="today number currency"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/image_symbol2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/euro"
        android:layout_below="@+id/image_symbol1" />

    <TextView
        android:id="@+id/currency_number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_toEndOf="@id/image_symbol2"
        android:layout_below="@id/currency_number1"
        android:text="today number currency"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/image_symbol3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/euro"
        android:layout_below="@+id/image_symbol2" />

    <TextView
        android:id="@+id/currency_number3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_toEndOf="@id/image_symbol3"
        android:layout_below="@id/currency_number2"
        android:text="today number currency"
        android:textStyle="bold"
        android:textSize="20dp" />

</RelativeLayout>